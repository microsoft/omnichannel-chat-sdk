# ===== OMNICHANNEL CONFIGURATION (Required) =====
# Get these from Omnichannel Administration > Chat Widget
REACT_APP_ORG_URL=https://your-org.crm.oc.crmlivetie.com
REACT_APP_ORG_ID=00000000-0000-0000-0000-000000000000
REACT_APP_WIDGET_ID=11111111-1111-1111-1111-111111111111

# ===== COPILOT STUDIO BOT CONFIGURATION =====
# Get Bot ID from Copilot Studio > Settings > Bot Details
REACT_APP_CPS_BOT_ID=22222222-2222-2222-2222-222222222222

# Optional: Environment ID (for multi-environment setups)
# REACT_APP_CPS_ENV_ID=your-environment-id

# ===== DIRECTLINE CONFIGURATION (Optional - for advanced DirectLine integration) =====
# Get DirectLine token endpoint from your Copilot Studio bot
REACT_APP_DIRECTLINE_TOKEN_URL=https://your-environment.api.powerplatform.com/powervirtualagents/botsbyschema/your-bot-id/directline/token?api-version=2022-03-01-preview
# Optional: DirectLine bot ID (usually same as CPS_BOT_ID)
# REACT_APP_DIRECTLINE_BOT_ID=your-directline-bot-id
# Optional: Custom user ID for DirectLine
# REACT_APP_DIRECTLINE_USER_ID=customer-user-id

# ===== AZURE SPEECH SERVICES (Optional - for advanced transcription) =====
# Get these from Azure Portal > Speech Services
# REACT_APP_SPEECH_KEY=your-azure-speech-key
# REACT_APP_SPEECH_REGION=eastus

# ===== AUTHENTICATION (Optional - for authenticated chat) =====
# REACT_APP_AUTH_TOKEN_URL=https://your-backend.com/api/auth/token
# REACT_APP_AUTH_TOKEN=your-auth-token
